<div>
  <p class="mb-0">
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p class="mb-2">
    <strong>Content:</strong>
    <%= article.content %>
  </p>

  <div class="d-flex align-items-center gap-2">
    <div class="flex-grow-1">
      <%= link_to 'Edit', [:edit, article], class: 'me-2' %>
      <%= link_to "Close", article_path('blank') %>
    </div>
    <%= button_to 'DELETE', article, method: :delete, class: 'btn btn-danger', data: { turbo_confirm: 'Are you sure?' } %>
  </div>
</div>
