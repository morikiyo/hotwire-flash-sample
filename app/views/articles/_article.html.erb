<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text">
      <%= article.content %>
    </p>
    <div class="d-flex align-items-center gap-2">
      <%= link_to 'Edit', [:edit, article] %>
      <%= link_to "Close", article_path('blank') %>
    </div>
  </div>
</div>
