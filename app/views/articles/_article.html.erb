<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text">
      <%= article.content %>
    </p>
    <div class="d-flex align-items-center">
      <div class="flex-grow-1">
        <%= link_to 'Edit', [:edit, article], class: 'me-2' %>
        <%= link_to "Close", article_path('blank') %>
      </div>
      <div>
        <%= button_to 'DELETE', article, method: :delete, class: 'btn btn-danger', data: { turbo_confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
</div>
